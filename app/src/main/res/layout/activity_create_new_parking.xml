<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    tools:context=".CreateNewParkingActivity">

    <EditText
        android:id="@+id/parkingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Parking Name"
        android:layout_marginTop="48dp" />

    <EditText
        android:id="@+id/parkingLat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude (X)"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/parkingLong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude (Y)"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/parkingCapacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capacity"
        android:inputType="number"
        android:layout_marginTop="16dp" />



    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp" />
</LinearLayout>
